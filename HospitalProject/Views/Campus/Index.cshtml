@using HospitalProject.Class
@model IEnumerable<CampusClass>

@{
    string campusName = ViewBag.CampusName;
}

<div class="row">
    <div class="col-6">
        <h3 class="text-center text-danger">Lista de Sedes</h3>
    </div>
    <div class="col-6">
        <a class="btn btn-success" asp-action="Create">Crear Nueva Sede</a>
    </div>
</div>
<br />
<div>
    <form id="frmfilterCampus" asp-action="Index" method="get">
        <label>Buscar por Sede:</label>
        <input type="text" name="campusName" onkeyup="debounce(filterCampus, 500)" value="@campusName" autocomplete="off" />
    </form>
</div>
<br />
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Direction)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var campus in Model)
        {
            <tr>
                <td>@Html.DisplayFor(c => campus.Id)</td>
                <td>@Html.DisplayFor(c => campus.Name)</td>
                <td>@Html.DisplayFor(c => campus.Direction)</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit">Editar</a>
                    <a class="btn btn-danger" asp-action="Delete">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    let timeoutId;
    function debounce(func, delay) {
        clearTimeout(timeoutId);
        timeoutId = setTimeout(func, delay);
    }
    function filterCampus() {
        document.getElementById('frmfilterCampus').submit();
    }
</script>
